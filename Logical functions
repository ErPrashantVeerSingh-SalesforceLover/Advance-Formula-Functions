                                                       1. AND()               &&
							                    IF(LastActivityDate  <>  TODAY() && TEXT( Active__c)  = 'No', TRUE, FALSE)
							2. IF()             IF(  AND(LastActivityDate  <>  TODAY(),  TEXT( Active__c)  = 'No')  , TRUE, FALSE)
							3. OR()                  ||
												 
												IF(  OR(LastActivityDate  =  TODAY(),  TEXT( Active__c)  = 'No')  , TRUE, FALSE) 
												 IF(LastActivityDate  =  TODAY() || TEXT( Active__c)  = 'No', TRUE, FALSE)
							4. NOT()            NOT( LastActivityDate   <>  TODAY())
							5. ISBLANK()        ISBLANK( Fax )
							6. ISNULL()
							7. ISNUMBER():      check if the value if number, if number returns TRUE else false
							8. NULLVALUE(): 
							                    NULLVALUE( AccountNumber , '987575')
												will check the value if field has value, than will show same value else substitude
        
        
